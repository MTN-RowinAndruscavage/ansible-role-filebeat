[Unit]
Description=Filebeat sends log files to Logstash or directly to Elasticsearch.
Documentation=https://www.elastic.co/products/beats/filebeat
Wants=network-online.target
After=network-online.target

[Service]
ExecStart=/usr/share/filebeat/bin/filebeat -c /etc/filebeat/{{ filebeat_instance_name }}.yml -path.home /usr/share/filebeat -path.config /etc/filebeat -path.data /var/lib/{{ filebeat_instance_name }} -path.logs /var/log/filebeat
Restart=always

[Install]
WantedBy=multi-user.target
